generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgres"
  url          = env("DATABASE_URL")
}

model messaging {
  id                 Int    @id @default(autoincrement())
  thread_id          String @unique
  booking_id         String[]                            // Lista bookingsIds
  average_time       Float                               // Tempo m√©dio entre mensagens
  max_time           Float                               // Maior tempo entre mensagens
  min_time           Float                               // Menor tempo entre mensagens
  created_at         DateTime @default(now())
}
